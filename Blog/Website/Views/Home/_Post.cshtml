@model Blog.PostViewModel

<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-md-8 col-lg-9">
                <div class="posts">
                    <div class="post">
                        <div class="post-aside">
                            <div>@Model.CreateOn.ToShortDateString()</div>
                            <div class="post-comment">@Model.Comments.Count</div>
                        </div>

                        <div class="post-main">
                            <h3 class="post-title">@Model.Title</h3>
                            @if (Model.FileStream != null) {
                                <img src="../../global/img/blog/blog-post-1.jpg" class="post-img img-responsive" alt="">
                            }
                            <div class="post-content">
                                <p>@Model.Content</p>
                                @Html.ActionLink("Read more...", "ViewPost", new { aPostId = @Model.PostId })                                                                                                 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

