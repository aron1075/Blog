@model Blog.PostViewModel

<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-md-8 col-lg-9">
                <div class="posts">
                    <div class="post">
                        <div class="post-aside">
                            <div>@Model.CreateOn.ToShortDateString()</div>
                            <div class="post-comment">@Model.Comments.Count</div>
                        </div>

                        <div class="post-main">
                            <h3 class="post-title">@Model.Title</h3>
                            @if (Model.FileName != null) {
                                <img src="https://s3.amazonaws.com/aron1075.project/@Model.FileName" class="img-responsive" alt="">
                            }
                            <div class="post-content">
                                <p>@Model.Content.Substring(0, (Model.Content.Length >= 300 ? 300 : Model.Content.Length))</p>
                                @Html.ActionLink("Read more...", "ViewPost", new { aPostId = @Model.PostId })                                                                                                 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

