@model Blog.PostViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body class="account-bg">
    <div class="account-wrapper">
        <div class="account-body">
            @using (Html.BeginForm("AddPost", "Home", new { returnUrl = ViewBag.ReturnUrl, @class = "col-md-12 center-block" })) {
                <div class="post-main">

                    @*<div class="form-group">
                        <label for="file">Upload Image:</label>
                        <input type="file" name="file" id="file" style="width: 100%;" />
                    </div>*@

                    <div class="form-group">
                        <h3 class="post-title">@Html.TextBoxFor(m => m.Title, new { @class = "form-control", @placeholder = "Title" })</h3>
                    </div>
                    <div class="post-content">
                        <div class="form-group">
                            @Html.TextAreaFor(m => m.Content, new { @class = "form-control", @placeholder = "Add content" })
                        </div>
                    </div>
                </div>
                @Html.ValidationSummary(false, string.Empty)
                <div class="form-action">
                    <button class="btn btn-primary btn-block btn-lg" type="submit">Add Post</button>
                </div>
            }
            </div>
        </div>
</body>

